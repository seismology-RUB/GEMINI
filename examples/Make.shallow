#----------------------------------------------------
#  Example: shallow seismics
#---------------------------------------------------
gfdsv:
	gfdsvrkf -fmin 1. -fmax 100. -tlen 1.28 -klim "10. 10." -ze 0. -xlen 1. -s 0 -fnod 100. \
		-sig 5. -wmrg .1 -msd "2. 1" -on temp/nodes.shallow -o temp/shallow shallow.nm
gfdsvseis:
	gfdsvrkfseis -o temp/seisshallow.sff -e 30. -dt 0.0025 -lp "5 50." -hp "2 5."  \
		-zs 0.1 info.shallow temp/shallow.sf
plotfk:
	plotGreenFKSpectra -z 0.1 -bg -4. temp/shallow.sf
plotgseis:
	plotSection temp/seisshallow.sff
#-----------------------------------------------------------------------------------------------------------
modes:
	flmodesSA -fmin 5. -fmax 100. -cmin 0.1 -cmax 0.26 -tlen 1.28 -o temp/modesshallow.sa \
		-p 0 -nmin 5 -wlr 8 shallow.nm
